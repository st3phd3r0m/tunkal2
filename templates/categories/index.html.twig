{% extends 'base-admin.html.twig' %}

{% block title %}Index des categories{% endblock %}
{% block h1 %}Index des categories{% endblock %}
{% block entity %}Categories{% endblock %}
{% block body %}
    <a href="{{ path('categories_new') }}" class="btn btn-success my-5">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>
					<a href="{{ path('categories_edit', {'id': category.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                    {{ include('categories/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}" class="btn btn-success my-5">Create new</a>
{% endblock %}
