{% extends 'base-admin.html.twig' %}

{% block title %}User{% endblock %}
{% block h1 %}User{% endblock %}
{% block entity %}Administrateurs{% endblock %}

{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('users_index') }}" class="btn btn-primary">back to list</a>

	<a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>

	{{ include('users/_delete_form.html.twig') }}
{% endblock %}
