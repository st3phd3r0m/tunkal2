{% extends 'base-admin.html.twig' %}

{% block title %}User index{% endblock %}
{% block h1 %}User index{% endblock %}
{% block entity %}Administrateurs{% endblock %}
{% block body %}

	<table class="table">
		<thead>
			<tr>
				<th>Email</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for user in users %}
			<tr>
				<td>{{ user.email }}</td>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				<td>
					<a href="{{ path('users_show', {'id': user.id}) }}">show</a>
					<a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>
					{{ include('users/_delete_form.html.twig') }}
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('users_new') }}">Create new</a>

{% endblock %}
