{% extends 'base-admin.html.twig' %}

{% block title %}User index{% endblock %}
{% block h1 %}User index{% endblock %}
{% block entity %}Administrateurs{% endblock %}
{% block body %}
	<a href="{{ path('users_new') }}" class="btn btn-success my-5">Create new</a>
	<table class="table">
		<thead>
			<tr>
				<th>Email</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for user in users %}
			<tr>
				<td>{{ user.email }}</td>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				<td>
					<a href="{{ path('users_show', {'id': user.id}) }}" class="btn btn-primary" ><i class="fas fa-glasses"></i></a>
					<a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-warning" ><i class="fas fa-edit"></i></a>
					{{ include('users/_delete_form.html.twig') }}
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('users_new') }}" class="btn btn-success my-5">Create new</a>

{% endblock %}
