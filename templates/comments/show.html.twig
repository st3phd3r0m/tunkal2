{% extends 'base-admin.html.twig' %}

{% block title %}Commentaire
	{{ comment.pseudo }}
	le
	{{ comment.createdAt|date('d-m-Y H:i:s') }}
{% endblock %}
{% block h1 %}Commentaire
	{{ comment.pseudo }}
	le
	{{ comment.createdAt|date('d-m-Y H:i:s') }}
{% endblock %}
{% block entity %}Commentaires{% endblock %}

{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Pseudo</th>
				<td>{{ comment.pseudo }}</td>
			</tr>
			<tr>
				<th>Ecrit le</th>
				<td>{{ comment.createdAt|date('d-m-Y H:i:s') }}</td>
			</tr>
			<tr>
				<th>Concernant l'article</th>
				<td>
					{% if comment.post != null %}
						<a title="Voir l'article associée" href="{{ path('posts_show', {id:comment.post.id}) }}">{{ comment.post.title }}</a>
					{% else %}
						Commentaire associé à aucun article
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ comment.content }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('comments_index') }}" class="btn btn-primary" >Retour à la liste</a>

	<a href="{{ path('comments_edit', {'id': comment.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>

	{{ include('comments/_delete_form.html.twig') }}
{% endblock %}
