{% extends 'base-admin.html.twig' %}

{% block title %}Courriel
	{{ courriel.name }}
	le
	{{ courriel.sentAt|date('d-m-Y H:i:s') }}
{% endblock %}
{% block h1 %}Courriel
	{{ courriel.name }}
	le
	{{ courriel.sentAt|date('d-m-Y H:i:s') }}
{% endblock %}
{% block entity %}Courriels{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ courriel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ courriel.name }}</td>
            </tr>
            <tr>
                <th>Mail_from</th>
                <td>{{ courriel.mailFrom }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ courriel.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ courriel.message }}</td>
            </tr>
            <tr>
                <th>Sent_at</th>
                <td>{{ courriel.sentAt ? courriel.sentAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('courriels_index') }}" class="btn btn-primary">back to list</a>

    {{ include('courriels/_delete_form.html.twig') }}
            
{% endblock %}
