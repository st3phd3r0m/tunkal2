<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# <link rel="shortcut icon" href="{{ asset('images/logo_neutre.jpg') }}" type="image/x-icon"> #}
        <title>{% block title %}Tunkal Admin{% endblock %}</title>
        
        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="{{ asset('adminlte/plugins/fontawesome-free/css/all.min.css') }}">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('adminlte/dist/css/adminlte.min.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="hold-transition sidebar-mini">

        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button" title="Rabattre/déployer la barre de navigation"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>

                <!-- Right navbar links -->
                <ul class="navbar-nav ml-auto">
                    <!-- Notifications Dropdown Menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" title="Accueil et déconnexion" href="#">
                            <i class="fas fa-user fa-fw"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <div class="dropdown-divider"></div>
                            <a href="{{ path('home') }}" class="dropdown-item" title="Aller à l'accueil du site">
                                <i class="nav-icon fas fa-home"></i>Accueil du site
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="{{ path('app_logout') }}" class="dropdown-item" title="Se déconnecter de l'administration du site">
                                <i class="nav-icon fas fa-sign-out-alt"></i>Déconnexion
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="{{ path('admin') }}" title="Retour vers la page d'accueil administration">
                    {{ include('_bannerAdmin.html.twig') }}
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        {# {% if app.user %}
                            <div class="text-light">
                                Bienvenue {{ app.user.firstname }} !
                            </div>
                        {% endif %} #}
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            {# Comptes utilisateurs #}
                            <li class="nav-item has-treeview">
                                <a title="Les utilisateurs de l'administration du site" href="#" class="nav-link">
                                <i class="nav-icon fas fa-user-cog"></i>
                                <p>
                                    Utilisateurs
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a title="Liste de utilisateurs" href="{{ path('users_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Liste des utilisateurs</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a title="Nouvel utilisateur" href="{{ path('users_new') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Nouvel utilisateur</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>       

                            {# Emails #}
                            <li class="nav-item has-treeview">
                                <a href="{{ path('courriels_index') }}" class="nav-link">
                                    <i class="nav-icon far fa-envelope"></i>
                                    <p>
                                        Courriels
                                    </p>
                                </a>
                            </li>                     

                            {# Commentaires #}
                            <li class="nav-item has-treeview">
                                <a href="{{ path('comments_index') }}" class="nav-link">
                                    <i class="nav-icon far fa-comments"></i>
                                    <p>
                                        Commentaires
                                    </p>
                                </a>
                            </li>

                            {# Gestion des articles #}
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-book"></i>
                                    <p>
                                        Articles
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('posts_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Liste</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('posts_new') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Nouveau</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            {# Gestion des catégories #}
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-book"></i>
                                    <p>
                                        Catégories
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('categories_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Liste</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('categories_new') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Nouveau</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            {# Gestion des liens #}
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-link"></i>
                                    <p>
                                        Gestion des liens
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('links_index') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Liste</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('links_new') }}" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Nouveau</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
        
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">

            	<!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">{% block h1 %}{% endblock %}</h1>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item">
                                        <a href="{{ path('admin') }}">Dashboard</a>
                                    </li>
                                    <li class="breadcrumb-item active">{% block entity %}{% endblock %}</li>
                                </ol>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->

                <!-- Main content -->
                <div class="content">
                    <div class="container-fluid">
                        {{ include('_userMessage.html.twig') }}
                        {% block body %}{% endblock %}
                    </div>
	            </div>
            </div>
            <!-- /.content-wrapper -->

            <!-- Main Footer -->
            <footer class="main-footer">
                <!-- To the right -->
                <div class="float-right d-none d-sm-inline">
                Anything you want
                </div>
                <!-- Default to the left -->
                <strong>Copyright &copy; 2014-2019 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
            </footer>
        </div>
        <!-- ./wrapper -->


        <!-- REQUIRED SCRIPTS -->
        <!-- jQuery -->
        <script src="{{ asset('adminlte/plugins/jquery/jquery.min.js')}}"></script>
        <!-- Bootstrap 4 -->
        <script src="{{ asset('adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <!-- AdminLTE App -->
        <script src="{{ asset('adminlte/dist/js/adminlte.min.js') }}"></script>
		{% block javascripts %}
		{% endblock %}
    </body>
</html>
